{
  "name": "@prisma-finance/api",
  "version": "0.1.0",
  "main": "apps/api/src/index.ts",
  "author": "Kaique Borges <rique.kaique@gmail.com>",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --tsconfig=tsconfig.app.json --import src/instrument.ts src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "node dist/index.js",
    "build": "tsup",
    "lint": "eslint -c eslint.config.mjs",
    "db:generate": "prisma generate --schema=./prisma/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=./prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "db:studio": "prisma studio --schema=./prisma/schema.prisma"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{projectRoot}/dist"
        ],
        "dependsOn": [
          "^build",
          "db:generate"
        ],
        "options": {
          "platform": "node",
          "main": "apps/api/src/index.ts",
          "outputPath": "apps/api/dist",
          "bundle": true,
          "format": [
            "esm"
          ],
          "tsConfig": "apps/api/tsconfig.app.json"
        }
      },
      "typecheck": {
        "dependsOn": [
          "db:generate"
        ]
      }
    },
    "tags": [
      "scope:api"
    ]
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@prisma-finance/core": "workspace:^",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@sentry/node": "^10.36.0",
    "@sentry/profiling-node": "^10.36.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "prisma": "^7.2.0",
    "winston": "^3.19.0",
    "winston-transport": "^4.9.0",
    "zod": "^4.3.5"
  }
}

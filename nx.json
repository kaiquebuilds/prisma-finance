{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "workspaceLayout": { "appsDir": "apps", "libsDir": "packages" },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "cache": true,
      "outputs": ["{projectRoot}/.next", "{projectRoot}/dist"]
    },
    "test": { "cache": true },
    "test:watch": { "cache": true },
    "lint": { "cache": true },
    "start": { "cache": true, "dependsOn": ["build"] }
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": { "typecheck": { "targetName": "typecheck" } }
    },
    { "plugin": "@nx/playwright/plugin", "options": { "targetName": "e2e" } }
  ]
}
